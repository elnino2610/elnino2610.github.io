//- demo: true
mixin post(args)
	include cssmodule
	+module('div', css.module, args)
		- var args = item
		div(class=css.media)
			a(href="#")
				img(src=set(args, 'imgsrc', 'https://picsum.photos/800/500'), alt="")

		div(class=css.body)
			h2(class=css.title)
				a(href="#")!= set(args, 'title', random(random.title, 150))

			p(class=css.text)!= set(args, 'text', random(random.text, 130))

			a(href="#", class=css.readmore)!= set(args, 'textBtn', 'learn more')